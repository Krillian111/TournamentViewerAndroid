<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="3dp"
    android:paddingRight="3dp">

    <fragment
        android:id="@+id/monster_dyp_setup_tournament_stats"
        android:name="de.tum.kickercoding.tournamentviewer.tournament.TournamentStatsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <fragment
        android:id="@+id/monster_dyp_setup_tournament_games"
        android:name="de.tum.kickercoding.tournamentviewer.tournament.TournamentGamesFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/button_finish_tournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_finish_tournament"/>
</LinearLayout>