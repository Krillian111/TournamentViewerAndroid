<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tournament_games_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tournament.TournamentGamesFragment">
    <Button
        android:id="@+id/button_add_game_to_tournament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Game"/>
    <ListView
        android:id="@+id/list_view_tournament_games"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/text_standard"
        android:dividerHeight="0.1dp"
        android:layout_below="@+id/button_add_game_to_tournament">
    </ListView>

</RelativeLayout>
