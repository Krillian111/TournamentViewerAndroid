<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_pure"
    android:padding="@dimen/padding_global">

    <fragment
        android:id="@+id/monster_dyp_setup_tournament_stats"
        android:name="de.tum.kickercoding.tournamentviewer.setup.PlayerSelectFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_go_to_tournament"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/button_go_to_tournament"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:drawableStart="@drawable/ic_check_box_grey"
        android:onClick="goToTournament"
        android:paddingStart="20dp"/>
</RelativeLayout>
