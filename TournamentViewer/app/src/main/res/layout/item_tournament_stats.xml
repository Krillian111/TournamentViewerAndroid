<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tournament_stats_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tournament_stats_item_rank"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:textColor="@color/text_standard"
        android:textSize="@dimen/text_default_size"/>

    <TextView
        android:id="@+id/tournament_stats_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        android:textAlignment="viewStart"
        android:textColor="@color/text_standard"
        android:textSize="@dimen/text_default_size"/>

    <TextView
        android:id="@+id/tournament_stats_item_played_games"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:textAlignment="center"
        android:textColor="@color/text_standard"
        android:textSize="@dimen/text_default_size"/>

    <TextView
        android:id="@+id/tournament_stats_item_ranking"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:textAlignment="center"
        android:textColor="@color/text_standard"
        android:textSize="@dimen/text_default_size"/>
</LinearLayout>