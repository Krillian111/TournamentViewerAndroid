<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tournament_game_item_root"
    style="@style/TvRow">

    <TextView
        android:id="@+id/tournament_game_item_team_1"
        style="@style/TvTextview.listitem"
        android:layout_weight="35"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/tournament_game_item_team_2"
        style="@style/TvTextview.listitem"
        android:layout_weight="35"
        android:maxLines="2"/>

    <TextView
        android:id="@+id/tournament_game_item_score"
        style="@style/TvTextview.listitem"
        android:layout_gravity="center"
        android:layout_weight="30"
        android:textAlignment="center"/>

</LinearLayout>